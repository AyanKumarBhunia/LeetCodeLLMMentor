{
  "manifest_version": 3,
  "name": "LeetCodeAIMentor",
  "version": "1.0",
  "description": "Analyze your LeetCode problems and get relevant background knowledge.",
  "permissions": [
    "activeTab",
    "desktopCapture",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCodeAIMentor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 